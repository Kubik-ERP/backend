{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "modules/report/template-pdf/*.hbs", "outDir": "dist/src", "watchAssets": false },
      {
        "include": "modules/purchase-orders/template-pdf/*.hbs",
        "outDir": "dist/src",
        "watchAssets": false
      }
    ]
  }
}
